From: Mat Booth <mat.booth@gmail.com>
Date: Sun, 19 Oct 2025 14:09:23 +0100
Subject: [PATCH 1/2] relax version contrainsts on dependencies

---
 Cargo.toml | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/Cargo.toml b/Cargo.toml
index 64a819a..78628c5 100644
--- a/Cargo.toml
+++ b/Cargo.toml
@@ -102,12 +102,12 @@ version = "0.7.3"
 optional = true
 
 [dependencies.directories]
-version = "6.0.0"
+version = "5.0.0"
 
 [dependencies.fern]
 version = "0.7.0"
 features = [
-    "syslog-7",
+    "syslog-6",
     "colored",
 ]
 
@@ -115,7 +115,7 @@ features = [
 version = "0.3.15"
 
 [dependencies.gethostname]
-version = "1.0.0"
+version = "0.4.3"
 
 [dependencies.hex]
 version = "0.4"
@@ -199,7 +199,7 @@ features = ["bindgen"]
 version = "0.5"
 
 [target."cfg(unix)".dependencies.syslog]
-version = "7"
+version = "6"
 
 [profile.release]
 lto = true
